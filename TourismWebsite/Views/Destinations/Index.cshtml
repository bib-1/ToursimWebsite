@model IEnumerable<TourismWebsite.Models.Destination>

@{
    ViewData["Title"] = "Index";
}

<h1>Destinations</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DestinationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DestinationLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DestinationDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DestinationPackage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DestinationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DestinationLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DestinationDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DestinationPackage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DestinationID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DestinationID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DestinationID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
