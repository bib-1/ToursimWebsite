@{ 
    ViewData["Title"] = "View All Roles";
}
@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" asp-controller="Roles">Create New</a>
</p>

<table class="table table-bordered">
    <tr>
        <th>
            Role Name
        </th>
        <th>
            Actions
        </th>
    </tr>

    <!--
        Code to display Roles info    
    -->
    @foreach (var item in Model) {


        <tr>
            <td>
                @item.Name
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id">Edit</a>
                <a asp-action="ManageUsers" class="btn btn-warning" asp-route-id="@item.Id">Manage Users</a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>

            </td>
        </tr>
    
    
    }

</table>